{
  "name": "vapi-monorepo",
  "version": "1.0.0",
  "description": "Vapi - Smart Parking Spot Discovery",
  "private": true,
  "workspaces": [
    "packages/*",
    "infra",
    "backend",
    "app"
  ],
  "scripts": {
    "build": "pnpm run --recursive build",
    "dev": "pnpm run --recursive dev",
    "test": "pnpm run --recursive test",
    "lint": "pnpm run --recursive lint",
    "deploy:infra": "cd infra && pnpm run deploy",
    "seed:dev": "cd backend && pnpm run seed:dev",
    "start:app": "cd app && pnpm run start"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}